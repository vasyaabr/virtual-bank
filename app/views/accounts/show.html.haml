-# in app/views/accounts/show.html.haml

%h2 Details about #{@account.name}

%ul#details
  %li
    Account:
    = @account.account
  %li
    Password:
    = @account.pass
  %li
    Sum:
    = @account.sum
  %li
    Credit allowed:
    = @account.credit
  %li
    E-mail:
    = @account.mail
  %li
    Active:
    = @account.active

= link_to 'Edit', edit_account_path(@account)
= button_to 'Delete', account_path(@account), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to account list', accounts_path
