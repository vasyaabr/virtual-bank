-#  This file is app/views/transactions/index.html.haml
%h1 Банк : Все транзакции

%table#transactions
  %thead
    %tr
      %th Со счета
      %th На счет
      %th Дата транзакции
      %th Сумма
      - if session[:admin] 
        %th Редактировать
        %th Удалить
  %tbody
    - @transactions.each do |transaction|
      %tr
        %td= transaction.from 
        %td= transaction.to
        %td= transaction.change_date
        %td= transaction.sum
        - if session[:admin] 
          %td= link_to 'Редактировать', edit_transaction_path(transaction)
          %td= button_to 'Удалить', transaction_path(transaction), :method => :delete, :confirm => 'Вы уверены?'

- if session[:admin] 
  = link_to 'Добавить новую транзакцию', new_transaction_path
